  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Dev",
      "skipFiles": ["<node_internals>/**"],
      "program": "/usr/local/bin/npm",
      "args": ["run", "dev"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Test",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test"
      },
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": ["./test/tests/**/*.js"]
    }
  ]
}
